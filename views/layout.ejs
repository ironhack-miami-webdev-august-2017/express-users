<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <header>
      <h1> Express Users </h1>

      <nav>
        <a href="/"> Home </a>
        <br>

        <% if (currentUser) { %>
          <a href="/my-rooms"> My Rooms </a>
          <br>

          <a href="/rooms/new"> Add a Room </a>
          <br>

          <a href="/logout"> Log Out </a>
          <br>

          <h2> <%= currentUser.email %> </h2>

          <% if (currentUser.role === 'admin') { %>
            <div>
              <h2> Admin Zone </h2>

              <a href="/admin/rooms"> All Rooms </a>
              <br>

              <a href="/admin/users"> All Users </a>
              <br>
            </div>
          <% } %>
        <% } else { %>
          <a href="/signup"> Sign Up </a>
          <br>

          <a href="/login"> Log In </a>
          <br>
        <% } %>
      </nav>
    </header>

    <%- body %>

    <footer>
      <p> Made with ðŸ’˜ at Ironhack. </p>
    </footer>
  </body>
</html>
